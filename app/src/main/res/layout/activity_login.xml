<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/progress_view" android:id="@+id/progress_login"/>

    <ImageView
        android:id="@+id/iv_profile_pic_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/et_email_login"
        style="@style/et_style"
        android:layout_below="@+id/iv_profile_pic_login"
        android:layout_marginTop="50dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/et_pass_login"
        style="@style/et_style"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email_login"
        android:hint="Password" />


    <TextView
        android:id="@+id/tv_forgot_pass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Forgot Password?"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forgot_pass_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textAppearance="?android:textAppearanceLarge" />

    <include
        layout="@layout/bottom_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_login_login" />
</RelativeLayout>